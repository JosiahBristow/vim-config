" Enable syntax highlighting
set syntax=on

" Show current mode
set showmode

" Show command
set showcmd

" Enable mouse support
set mouse=a

" Set encoding
set encoding=utf-8

" Enable 256 colors
set t_Co=256

" Set backspace behavior
set backspace=indent,eol,start

" Set leader key to space
let mapleader=' '
let g:mapleader=' '
